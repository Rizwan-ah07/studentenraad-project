<!-- views/forgotPassword.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Forgot Password - Student Council Portal</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

    <main class="container forgot-password-container">
        <section class="row justify-content-center">
            <article class="col-md-5">
                <header class="text-center">
                    <img src="/images/logo.png" alt="Logo" class="brand-logo">
                </header>
                <article class="form-card">
                    <h3 class="text-center">Forgot Your Password?</h3>
                    <% if (message) { %>
                        <aside class="alert alert-success mt-3">
                            <%= message %>
                        </aside>
                    <% } %>
                    <% if (error) { %>
                        <aside class="alert alert-danger mt-3">
                            <%= error %>
                        </aside>
                    <% } %>
                    <form action="/forgot-password" method="POST" class="mt-4" id="forgotPasswordForm">
                        <fieldset class="form-group">
                            <label for="email" class="mb-2">Enter your Email</label>
                            <input type="email" class="form-control" id="email" name="email" required autofocus>
                        </fieldset>
                        <button type="submit" class="btn btn-primary btn-block">Send Reset Link</button>
                        <p class="text-center mt-3">
                            Remembered your password? <a href="/login">Login here</a>
                        </p>
                    </form>
                </article>
            </article>
        </section>
    </main>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/[emailÂ protected]/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

</body>
</html>
