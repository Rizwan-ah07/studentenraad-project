<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Register - Student Council Portal</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://kit.fontawesome.com/380b1a3386.js" crossorigin="anonymous"></script>

</head>
<body>

    <main class="container register-container">
        <section class="row justify-content-center">
            <article class="col-md-6">
                <header class="text-center">
                    <img src="/images/logo.png" alt="Logo" class="brand-logo">
                </header>
                <article class="form-card">
                    <h3 class="text-center">Create an Account</h3>
                    <% if (error) { %>
                        <aside class="alert alert-danger mt-3">
                            <%= error %>
                        </aside>
                    <% } %>
                    <form id="registerForm" action="/register" method="POST" class="mt-4">
                        <fieldset class="form-group d-flex align-items-center">
                            <label for="username" class="mr-2">Username</label>
                            <input type="text" class="form-control mb-0" id="username" name="username" required autofocus>
                            <button type="button" id="random-username-btn" class="btn btn-light random-button">
                                <i class="fas fa-dice"></i>
                            </button>
                        </fieldset>
                        <fieldset class="form-group">
                            <label for="email" class="mb-2">School Email</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </fieldset>

                        <section class="form-row password-section">
                            <fieldset class="form-group col-md-6">
                                <label for="password" class="mb-2">Password</label>
                                <input type="password" class="form-control" id="password" name="password" required aria-describedby="passwordHelp" autocomplete="new-password" aria-required="true">
                                <!-- Password Requirements Dropdown -->
                                <aside id="passwordHelp" class="password-requirements" aria-live="polite">
                                    <ul>
                                        <li id="length" class="invalid">At least 8 characters</li>
                                        <li id="uppercase" class="invalid">At least one uppercase letter</li>
                                        <li id="number" class="invalid">At least one number</li>
                                        <li id="symbol" class="invalid">At least one special symbol (!@#$%^&*)</li>
                                    </ul>
                                </aside>
                            </fieldset>
                            <fieldset class="form-group col-md-6">
                                <label for="passwordConfirm" class="mb-2">Confirm Password</label>
                                <input type="password" class="form-control" id="passwordConfirm" name="passwordConfirm" required autocomplete="new-password">
                            </fieldset>
                        </section>

                        <p id="passwordError" class="error-message">Passwords do not match. Please try again.</p>
                        <button type="submit" class="btn btn-success btn-block">Register</button>
                        <p class="text-center mt-3">
                            Already have an account? <a href="/login">Login here</a>
                        </p>
                    </form>
                </article>
            </article>
        </section>
    </main>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/[emailÂ protected]/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <script src="/js/script.js" defer></script>

</body>
</html>